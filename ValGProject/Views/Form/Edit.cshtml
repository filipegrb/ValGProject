@page
@model ValGProject.Models.Topic

@{
    Layout = "~/Views/Shared/_LayoutForUser.cshtml";
}

@section scripts{
    <script type="text/javascript">
        function preventBack() {
            window.history.forward();
        }

        setTimeout("preventBack()", 0);

        window.onunload = function () { null };
    </script>
    }

<h2 style="text-align:center">Edit Topic</h2>

@using(Html.BeginForm("Edit", "Form", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CreatonDate)
    @Html.HiddenFor(m => m.Creator)
    <div class="col-7 mx-auto">
        <div style="text-align:center" class="card bg-light d-flex align-items-center flex-column justify-content-center">
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title, new {@class="form-control", @style="width:100px; height:30px; text-align:center"})
                @Html.ValidationMessageFor(m => m.Title, "", new {@class="text-danger"})
            </div>

            <br>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new {@style="display:block"})
                @Html.EditorFor(m => m.Description, new {@class="form-control", @style="display:block"})
                @Html.ValidationMessageFor(m => m.Description, "", new {@class="text-danger"})
            </div>

            <br>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
    TempData.Keep("user");
}
