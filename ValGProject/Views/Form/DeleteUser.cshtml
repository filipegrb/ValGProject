@page
@model ValGProject.Models.Topic

@{
    Layout = "~/Views/Shared/_LayoutForUser.cshtml";
}

@section scripts{
    <script type="text/javascript">
        function preventBack() {
            window.history.forward();
        }

        setTimeout("preventBack()", 0);

        window.onunload = function () { null };
    </script>
    }

<h2 style="text-align:center">Delete</h2>

@using (Html.BeginForm("DeleteUser", "Form", FormMethod.Post))
{
    <div class="col-3 mx-auto">
        <div style="text-align:center" class="card bg-light d-flex align-items-center flex-column justify-content-center">

            <p>You're about to Delete your user. To Confirm click button</p>

            <br>

            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
    </div>
    TempData.Keep("user");
}